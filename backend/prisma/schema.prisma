// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Category {
  id   Int    @id @default(autoincrement())
  name String
  Task Task[]

  @@map(name: "categories")
}

model Task {
  id         Int      @id @default(autoincrement())
  name       String
  category   Category @relation(references: [id], fields: [categoryId])
  categoryId Int

  @@map(name: "tasks")
}
