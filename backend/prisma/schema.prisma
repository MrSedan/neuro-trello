model Category {
  id   Int    @id @default(autoincrement())
  name String
  Task Task[]

  @@map(name: "categories")
}

model Task {
  id         Int      @id @default(autoincrement())
  name       String
  category   Category @relation(references: [id], fields: [categoryId], onDelete: Cascade)
  categoryId Int

  @@map(name: "tasks")
}
